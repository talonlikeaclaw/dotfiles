// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "theme": "Catppuccin Mocha (Blue Blur+)",
    "icon_theme": "Catppuccin Frapp√©",
    "base_keymap": "VSCode",
    "features": {
        "edit_prediction_provider": "zed"
    },
    "edit_predictions": {
        "mode": "subtle"
    },
    "buffer_font_family": "JetBrainsMono Nerd Font",
    "buffer_font_size": 14,
    "buffer_font_weight": 400,
    "buffer_line_height": "comfortable",
    "ui_font_family": "JetBrainsMono Nerd Font",
    "ui_font_size": 16,
    "ui_font_weight": 400,
    "tab_size": 4,
    "scrollbar": {
        "show": "never"
    },
    "active_pane_modifiers": {
        "magnification": 1.0,
        "border_size": 0.0,
        "inactive_opacity": 0.8
    },
    "assistant": {
        "dock": "left",
        "default_width": 420,
        "default_model": {
            "provider": "ollama",
            "model": "codellama:7b"
        },
        "version": "2"
    },
    "notification_panel": {
        "dock": "left"
    },
    "outline_panel": {
        "dock": "right"
    },
    "project_panel": {
        "indent_size": 12,
        "dock": "right"
    },
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": false
    },
    "tabs": {
        "file_icons": true,
        "git_status": true
    },
    "terminal": {
        "line_height": "standard",
        "font_size": 13,
        "detect_venv": {
            "on": {
                "directories": [".env", "env", ".venv", "venv", ".venv*"],
                "activate_script": "default"
            }
        }
    },
    "journal": {
        "path": "~/Documents/Obsidian",
        "hour_format": "hour24"
    },
    "telemetry": {
        "metrics": false,
        "diagnostics": false
    },
    "vim_mode": true,
    "relative_line_numbers": true,
    "vertical_scroll_margin": 20,
    "autoscroll_on_clicks": true,
    "format_on_save": "off",
    "restore_on_startup": "none",
    "auto_install_extensions": {
        "basher": true,
        "catppuccin-blur-plus": true,
        "csharp": true,
        "csv": true,
        "docker-compose": true,
        "dockerfile": true,
        "emmet": true,
        "env": true,
        "html": true,
        "java": true,
        "jinja2": true,
        "live-server": true,
        "lue": true,
        "pylsp": true,
        "ruff": true,
        "snippeets": true,
        "sql": true,
        "sqruff": true,
        "tmux": true,
        "tokyo-night": true,
        "toml": true,
        "xml": true
    }
}
