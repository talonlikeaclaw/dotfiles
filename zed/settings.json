// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "languages": {
        "Python": {
            "show_edit_predictions": true
        },
        "CSharp": {
            "show_edit_predictions": true
        }
    },
    "theme": {
        "mode": "system",
        "light": "Ayu Light",
        "dark": "Tokyo Night"
    },
    "icon_theme": {
        "mode": "system",
        "light": "Catppuccin Latte",
        "dark": "Catppuccin Mocha"
    },
    "base_keymap": "VSCode",
    "features": {
        "edit_prediction_provider": "zed"
    },
    "edit_predictions": {
        "mode": "subtle"
    },
    "buffer_font_family": "Maple Mono NF",
    "buffer_font_size": 13.0,
    "buffer_font_weight": 400.0,
    "buffer_line_height": "standard",
    "ui_font_family": "Maple Mono NF",
    "ui_font_size": 14.0,
    "ui_font_weight": 350.0,
    "tab_size": 4,
    "active_pane_modifiers": {
        "magnification": 1.0,
        "border_size": 0.0,
        "inactive_opacity": 0.95
    },
    "agent": {
        "default_profile": "ask",
        "dock": "left",
        "default_width": 420,
        "default_model": {
            "provider": "ollama",
            "model": "qwen3:14b"
        },
    },
    "notification_panel": {
        "dock": "left"
    },
    "outline_panel": {
        "dock": "right"
    },
    "project_panel": {
        "indent_size": 12,
        "dock": "right"
    },
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": false
    },
    "tabs": {
        "file_icons": true,
        "git_status": true
    },
    "terminal": {
        "line_height": "standard",
        "font_size": 13.0,
        "detect_venv": {
            "on": {
                "directories": [".env", "env", ".venv", "venv", ".venv*"],
                "activate_script": "default"
            }
        }
    },
    "journal": {
        "path": "~/Documents/Obsidian",
        "hour_format": "hour24"
    },
    "telemetry": {
        "metrics": false,
        "diagnostics": false
    },
    "vim_mode": true,
    "relative_line_numbers": "enabled",
    "vertical_scroll_margin": 5,
    "autoscroll_on_clicks": true,
    "format_on_save": "off",
    "restore_on_startup": "last_workspace",
    "language_models": {
        "ollama": {
            "api_url": "http://localhost:11434",
            "available_models": [
                {
                    "name": "qwen3:14b",
                    "display_name": "Qwen",
                    "max_tokens": 16000,
                    "supports_tools": true
                },
                {
                    "name": "devstral:latest",
                    "display_name": "Devstral",
                    "max_tokens": 3000,
                    "supports_tools": true
                }
            ]
        }
        // "ollama": {
        //     "api_url": "http://192.168.0.143:11434",
        //     "available_models": [
        //         {
        //             "name": "gemma3:12b",
        //             "display_name": "Gemma 3 12B (PC)",
        //             "max_tokens": 32000
        //         },
        //         {
        //             "name": "qwen3:14b",
        //             "display_name": "Qwen 14B (PC)",
        //             "max_tokens": 32000
        //         },
        //         {
        //             "name": "qwen3",
        //             "display_name": "Qwen 8B (PC)",
        //             "max_tokens": 32000
        //         },
        //         {
        //             "name": "qwen3:4b",
        //             "display_name": "Qwen 4B (PC)",
        //             "max_tokens": 32000
        //         }
        //     ]
        // }
    },
    "auto_install_extensions": {
        "basher": true,
        "catppuccin-blur-plus": true,
        "csharp": true,
        "csv": true,
        "docker-compose": true,
        "dockerfile": true,
        "emmet": true,
        "env": true,
        "html": true,
        "java": true,
        "jinja2": true,
        "live-server": true,
        "lue": true,
        "pylsp": true,
        "ruff": true,
        "snippeets": true,
        "sql": true,
        "sqruff": true,
        "tmux": true,
        "tokyo-night": true,
        "toml": true,
        "xml": true
    }
}
