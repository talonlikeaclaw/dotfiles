        "ollama": {
            "api_url": "http://192.168.0.143:11434",
            "available_models": [
                {
                    "name": "qwen2.5-coder:7b",
                    "display_name": "Qwen Coder 7B (PC)",
                    "max_tokens": 32768,
                    "supports_tools": true
                }
            ]
        }
    },
    "auto_install_extensions": {
        "basher": true,
        "catppuccin-blur-plus": true,
        "csharp": true,
        "csv": true,
        "docker-compose": true,
        "dockerfile": true,
        "emmet": true,
        "env": true,
        "html": true,
        "java": true,
        "jinja2": true,
        "live-server": true,
        "lue": true,
